<% if(success && success.length){ %>
    <div class="alert alert-success d-flex align-items-center alert-dismissible fade show col-md-6 offset-md-3 mt-3" role="alert">
        <div><%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
      </div>
      <% } %>
    
     <% if(error && error.length){ %>
        <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show col-md-6 offset-md-3 mt-3" role="alert">
            <div><%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
          </div>
          <% } %>         